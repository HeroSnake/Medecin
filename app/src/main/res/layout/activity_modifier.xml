<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syxflorent.medecinprojet.ModifierActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:background="#eaedf2">

        <TextView
            android:layout_width="100dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Nom : "/>

        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:background="#eaedf2">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="PrÃ©nom : "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:background="#eaedf2">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Chambre : "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/chambre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:background="#eaedf2">

        <TextView
            android:layout_width="100dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Motif : "/>

        <EditText
            android:id="@+id/motif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date de naissance:"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <DatePicker
        android:id="@+id/dateNaissance"
        android:layout_width="wrap_content"
        android:calendarViewShown="true"
        android:spinnersShown="false"
        android:layout_weight="7"
        android:layout_height="0dp"
        android:headerBackground="#5a98fc"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmer"
        android:id="@+id/btnConfirmer">
    </Button>
</LinearLayout>
